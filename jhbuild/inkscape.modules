    </branch>
    <dependencies>
      <!-- TODO
      <dep package="package-name"/>
      -->
    </dependencies>
  </cmake>

  <!-- OpenMP https://github.com/llvm/llvm-project -->
  <cmake
    id="openmp">
    <branch
      module="llvm/llvm-project/releases/download/llvmorg-11.0.0/openmp-11.0.0.src.tar.xz"
      version="11.0.0"
      hash="sha256:2d704df8ca67b77d6d94ebf79621b0f773d5648963dd19e0f78efef4404b684c"
      repo="github"
      checkoutdir="openmp-11.0.0">
    </branch>
    <dependencies>
      <!-- TODO
      <dep package="package-name"/>
      -->
    </dependencies>
  </cmake>

  <!-- Poppler https://poppler.freedesktop.org -->
  <cmake
    id="poppler"
    cmakeargs="-DENABLE_UNSTABLE_API_ABI_HEADERS=ON -DENABLE_GOBJECT_INTROSPECTION=OFF">
    <branch
      module="poppler-21.06.1.tar.xz"
      version="21.06.1"
      hash="sha256:86b09e5a02de40081a3916ef8711c5128eaf4b1fc59d5f87d0ec66f04f595db4"
      repo="poppler">
    </branch>
    <dependencies>
      <dep package="cmake"/>
      <dep package="glib"/>
      <dep package="gtk+-3.0"/>
      <dep package="gdk-pixbuf"/>
     </dependencies>
  </cmake>

  <!-- Potrace http://potrace.sourceforge.net -->
  <autotools
    id="potrace"
    autogen-sh="configure"
    autogenargs="--with-libpotrace">
    <branch
      module="potrace/1.16/potrace-1.16.tar.gz"
      version="1.16"
      hash="sha256:be8248a17dedd6ccbaab2fcc45835bb0502d062e40fbded3bc56028ce5eb7acc"
      repo="sourceforge">
    </branch>
    <dependencies>
      <!-- TODO
      <dep package="package-name"/>
      -->
    </dependencies>
  </autotools>

  <!-- Rust https://www.rust-lang.org

       Rust has a custom setup routine (rustup) which is wrapped into
       a cmake file introduced by that patch below.
  -->
  <cmake
    id="rust"
    cmakeargs="-DVERSION=1.48.0"
    supports-non-srcdir-builds="no"
    use-ninja="no">
    <branch
      module="rust-lang/rustup/archive/1.22.1.tar.gz"
      version="1.22.1"
      hash="sha256:ad46cc624f318a9493aa62fc9612a450564fe20ba93c689e0ad856bff3c64c5b"
      repo="github"
      checkoutdir="rustup-1.22.1"
      rename-tarball="rustup-1.22.1.tar.gz">
      <patch
        file="rust_cmake_install.patch"
        strip="1"/>
    </branch>
  </cmake>

</moduleset>
